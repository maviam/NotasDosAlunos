@model IEnumerable<MvcWebGradesApplication.Models.FormandoModel>
@{
    ViewData["Title"] = "Lista de Formandos";
}

<h2 class="mt-2">@ViewData["Title"]</h2>
<hr class="mb-5" />

@if (TempData["MensagemDeSucesso"] != null)
{
    <div class="alert alert-success text-center my-3" role="alert">
        <button class="close-alert btn-dark">X</button>
        @TempData["MensagemDeSucesso"]
    </div>
}

@if (TempData["MensagemDeCancelamento"] != null) {
    <div class="alert alert-danger text-center my-3" role="alert">
        <button class="close-alert btn-dark">X</button>
        @TempData["MensagemDeCancelamento"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.DataNascimento)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Telemovel)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Sexo)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var formando in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => formando.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => formando.Email)</td>
                    <td>@Html.DisplayFor(modelItem => formando.DataNascimento)</td>
                    <td>@Html.DisplayFor(modelItem => formando.Telemovel)</td>
                    <td>@Html.DisplayFor(modelItem => formando.Sexo)</td>
                </tr>
        }
    </tbody>
</table>
